<!-- Table for displaying submitted reviews -->
<table class="display dataTable" id="submitted-reviews-table">
  
  <!-- Table Header -->
  <thead>
    <tr>
      
      <!-- Column headers for Employee, Email-Id, and Feedback -->
      <th>Employee</th>
      <th>Email-Id</th>
      <th>Feedback</th>
    </tr>
  </thead>

  <!-- Table Body -->
  <tbody>

    <!-- Loop through each submitted review in the array -->
    <% submitted_reviews.forEach(review=> { %>

      <!-- Table Row for each submitted review -->
      <tr id="row-<%= review.for_user.id %>">

        <!-- Display the full name of the reviewed employee -->
        <td class="user-name">
          <%= review.for_user.fullName %>
        </td>

        <!-- Display the email of the reviewed employee -->
        <td class="user-email">
          <%= review.for_user.email %>
        </td>

        <!-- Column for viewing feedback, represented by an eye icon -->
        <td>

          <!-- Eye icon with onclick event to open the feedback view -->
          <i class="fas fa-eye" style="color: #038705" data-bs-toggle="modal" data-bs-target="#modal"
            onclick="viewFeedback(this,'<%- review.id %>')"></i>
        </td>
      </tr>

      <% }) %>
  </tbody>
</table>