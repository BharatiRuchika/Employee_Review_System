<!-- Include external stylesheet for modal styling -->
<link rel="stylesheet" href="/css/modal.css" />

<!-- Form for creating a new user with an action to the specified API endpoint -->
<form action="/api/v1/admin/create-user" method="post" onsubmit="createUser(this,event)">
  
  <!-- Modal Header -->
  <div class="modal-header">
    <h1 class="modal-title fs-5" id="exampleModalLabel">Add User</h1>
    
    <!-- Button to close the modal -->
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  
  <!-- Modal Body -->
  <div class="modal-body">
    
    <!-- Form input fields for user details -->
    <div class="form-item">
      <label for="fullName" class="form-label">Name</label>
      
      <!-- Input field for the user's name -->
      <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter Name" required />
    </div>
    
    <!-- Input field for the user's email address -->
    <div class="form-item">
      <label for="email" class="form-label">Email-Id</label>

      <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email-Id" required />
    </div>

    <div class="form-item">
      <label for="role" class="form-label">Role</label>
      
      <!-- Dropdown for selecting the user's role -->
      <select class="form-control" name="role" id="role" required>
        <option value="" selected disabled>Select</option>
        <option value="Employee">Employee</option>
        <option value="Admin">Admin</option>
      </select>
    </div>
    <div class="form-item">
      <label for="password" class="form-label">Password</label>
      
      <!-- Input field for the user's password -->
      <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required />
    </div>

    <div class="form-item">
      <label for="confirm_password" class="form-label">Confirm Password</label>
      
      <!-- Input field for confirming the user's password -->
      <input type="password" class="form-control" id="confirm_password" name="confirm_password"
        placeholder="Confirm Password" required />
    </div>
  </div>
  
  <!-- Modal Footer with buttons -->
  <div class="modal-footer">
    
    <!-- Button to cancel and close the modal -->
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
      Cancel
    </button>
    
    <!-- Button to submit the form and create the user -->
    <button type="submit" class="btn btn-success">Create</button>
  </div>
</form>