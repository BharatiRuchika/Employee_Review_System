<!-- Include external stylesheet for header styling -->
<link rel="stylesheet" href="/css/header.css">
<!-- Header section with logo and user information -->
<div class="row" id="header">
    <!-- Logo Section -->
    <div class="col-5 col-sm-5 col-md-4">
        <img id="ERS_logo" src="/images/logo.png" />
    </div>

    <!-- User Information Section -->
    <div class="col-5 col-sm-5 offset-2 col-md-3 offset-md-5" id="header-user-info">
        <div class="row">
            <!-- User Profile Section -->
            <% if(locals.user){ %>
                <div class="col-12 col-md-8 " id="header-profile">
                    <!-- Button to toggle user profile details -->
                    <button class="d-flex profile-btn" type="button" data-bs-toggle="collapse"
                        data-bs-target="#profileDetails" aria-expanded="false" aria-controls="profileDetails">
                        <img id="profile-image"
                            src="https://static.vecteezy.com/system/resources/thumbnails/002/387/693/small/user-profile-icon-free-vector.jpg" />
                    </button>

                    <!-- User Profile Details (Hidden by default) -->
                    <div class="collapse" id="profileDetails">
                        <div class="card card-body">

                            <!-- Current User Profile Information -->
                            <div class="row curr-profile" id="<%=locals.user.id %>">
                                <div class="col-6 col-sm-4">
                                    <img
                                        src="https://static.vecteezy.com/system/resources/thumbnails/002/387/693/small/user-profile-icon-free-vector.jpg" />
                                </div>

                                <div class="col-6 col-sm-8">
                                    <h6>
                                        <%=locals.user && locals.user.fullName %>
                                    </h6>
                                </div>
                            </div>
                            <hr />

                            <!-- Logout Section -->
                            <div class="row">
                                <div class="col-4">
                                    <!-- Logout link -->
                                    <a id="sign-out-icon" href="/api/v1/users/sign-out">
                                        <i class="fa fa-arrow-right-from-bracket"></i>
                                    </a>
                                </div>
                                <div class="col-8">
                                    <!-- Logout label -->
                                    <h6>Log Out</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%}else{%>
                    <!-- Authentication Buttons for Sign In and Sign Up -->
                    <div class="row" id="auth-buttons">
                        <div class="col-6 col-md-6">
                            <a href="/api/v1/auth/sign-in"><button>Sign In</button></a>
                        </div>
                        <div class="col-6 col-md-6">
                            <a href="/api/v1/auth/sign-up"><button>Sign Up</button></a>
                        </div>
                    </div>
                    <%}%>
        </div>
    </div>
</div>